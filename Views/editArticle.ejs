<body class="table-dark pt-4">
  <%- include('./navbar') %>
    <div class="offset-4 col-4 pt-4 pb-4 table-secondary">
    <form method="POST" action="/article/edit/<%=massage[0]._id%>">
        <span  style="color: black;" id="basic-addon1">name:</span><span style="color: red;">*require</span>
        
        <input value="<%=massage[0].Name%>" name="Name" type="text" class="form-control" placeholder="name" aria-label="Username" aria-describedby="basic-addon1">
        <span  style="color: black;" id="basic-addon1">Description</span><span style="color: red;">*require</span>
        
      <input value="<%=massage[0].Description%>" name="Description" type="text" class="form-control" placeholder="Description" aria-label="Username" aria-describedby="basic-addon1">
      <span  style="color: black;" id="basic-addon1">Title:</span><span style="color: red;">*require</span>
        
      <div class="input-group mb-3">
        <select value="<%=massage[0].Title%>" name="Title" class="custom-select" id="inputGroupSelect01">
          <option selected>Choose...</option>
          <option value="political">political</option>
          <option value="social">social</option>
          <option value="cultural">cultural</option>
          <option value="economic">economic</option>
          
        </select>
      </div>
      <span  style="color: black;" id="basic-addon1">Text:</span><span style="color: red;">*require</span>
      <br>
      <textarea id="Text" name="Text">
          <%-massage[0].Text%>
      </textarea>
        <br>
        <center>  
      <Button type="submit" class="btn btn-success mt-4">save</Button><br>
    </center> 
    </form>
</div>
<% if(massage.length>1){ %>
    <div style="font-family: cursive;text-align: center;" class=" mt-4 alert alert-danger offset-4 col-4" role="alert">
      <% for(let i=1;i<massage.length;i++){%>
       <%= massage[i] %>
     <br>
     <%}%>
       </div>
     <% } %> 

  

